<style type="text/css" media="screen">
  .handlecolor{
    color:black;
  }
</style>
<h1>Products list</h1>

<p>
  {{link-to "New Product" "products.new" class="handlecolor"}}
</p>

{{#if model.length}}
  <table class="table table-striped">
    <thead>
      <tr>
        <th>
          Name
        </th>
        <th>
          Price
        </th>
        <th>
          Description
        </th>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each product in model}}
        <tr>
          <td>
            {{product.name}}
          </td>
          <td>
            {{product.price}}
          </td>
          <td>
            {{product.description}}
          </td>
          <td>
            {{link-to "Edit" "products.edit" product class="handlecolor"}}
          </td>
          <td>
            {{link-to  "Show" "products.show" product class="handlecolor"}}
          </td>
          <td>
            <a  style="color:black" {{action "remove" product}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Products found
  </p>
{{/if}}
